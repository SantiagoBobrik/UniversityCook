<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:context=".RecetasLista"
    android:layout_margin="10dp"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:id="@+id/backGroundRecycler"
        />
    <ImageView
        android:id="@+id/fotocomida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:src="@drawable/choclotorta"
        android:scaleType="centerCrop"/>


    <ImageView
        android:id="@+id/trasnparenciaRecycler"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="#77000000"
        android:layout_gravity="bottom"
        />

    <TextView
        android:id="@+id/nombrecomida"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:textColor="#FFFFFF"
        tools:text="Pancho Super Con Papas"
        android:textSize="20dp"
        android:fontFamily="sans-serif-smallcaps"/>


</android.support.v7.widget.CardView>